extends ../../layout/default.pug
include ../../mixins/box-head.pug
include ../../mixins/moment.pug

block main
    .container.my-3
        .row
            .col-12
                +box-head(pageTitle)

        .row
            each song in songs
                .col-6.col-md-6.mb-3
                    div(class="song-item")
                        div(class="inner-image")
                            a(href=`/songs/detail/${song.slug}`)
                                img(src=song.avatar, alt=song.title)
                        div(class="inner-content")
                            div(class="inner-title")
                                a(href=`/songs/detail/${song.slug}`) #{song.title}
                            div(class="inner-singer")
                                i(class="fa-solid fa-microphone-lines") 
                                |  #{song.singerInfo[0].fullName}
                            div(class=`inner-heart${song.isFavorite ? ' active' : ''}`)
                                i.fa-regular.fa-heart
                                |  Yêu thích
                            div(class="inner-time")
                                i(class="fa-regular fa-clock")
                                    +formatDateTime(song.addedAt)


